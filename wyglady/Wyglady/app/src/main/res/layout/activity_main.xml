<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/sr_background2"
    android:backgroundTint="@android:color/darker_gray"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sr_editText_confirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/sr_button"
        android:backgroundTint="@color/material_on_primary_emphasis_medium"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/sr_editText_password"
        app:layout_constraintStart_toStartOf="@+id/sr_editText_password"
        app:layout_constraintTop_toBottomOf="@+id/sr_editText_password" />

    <ImageView
        android:id="@+id/sr_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/sr_main2_icon" />

    <TextView
        android:id="@+id/sr_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp to Yddet"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sr_image" />

    <EditText
        android:id="@+id/sr_editText_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sr_button"
        android:backgroundTint="@color/material_on_primary_emphasis_medium"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sr_textView_title" />

    <EditText
        android:id="@+id/sr_editText_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/sr_button"
        android:backgroundTint="@color/material_on_primary_emphasis_medium"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/sr_editText_username"
        app:layout_constraintStart_toStartOf="@+id/sr_editText_username"
        app:layout_constraintTop_toBottomOf="@+id/sr_editText_username" />

    <Button
        android:id="@+id/sr_button_singUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:paddingRight="64dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/layout2_button_textColor"
        android:textStyle="bold"
        app:cornerRadius="@dimen/button_cornerRadius"
        app:icon="@drawable/sr_singup"
        app:iconSize="35dp"
        app:iconTint="@color/layout2_button_textColor"
        app:layout_constraintEnd_toEndOf="@+id/sr_editText_confirmPassword"
        app:layout_constraintStart_toStartOf="@+id/sr_editText_confirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/sr_editText_confirmPassword" />

    <Button
        android:id="@+id/sr_button_or"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="OR"
        android:textColor="@color/layout2_button_textColor"
        android:textStyle="bold"
        app:cornerRadius="@dimen/button_cornerRadius"
        app:layout_constraintEnd_toEndOf="@+id/sr_button_singUp"
        app:layout_constraintStart_toStartOf="@+id/sr_button_singUp"
        app:layout_constraintTop_toBottomOf="@+id/sr_button_singUp" />

    <Button
        android:id="@+id/sr_button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingRight="64dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/layout2_button_textColor"
        android:textStyle="bold"
        app:cornerRadius="@dimen/button_cornerRadius"
        app:icon="@drawable/sr_login"
        app:iconSize="35dp"
        app:iconTint="@color/layout2_button_textColor"
        app:layout_constraintEnd_toEndOf="@+id/sr_button_singUp"
        app:layout_constraintStart_toStartOf="@+id/sr_button_singUp"
        app:layout_constraintTop_toBottomOf="@+id/sr_button_or" />

    <TextView
        android:id="@+id/sr_textView_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="Take control of your health with your personal health data tracker, with Yddet your health is in your hands"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sr_editText_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/sr_button"
        android:backgroundTint="@color/material_on_primary_emphasis_medium"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/sr_editText_email"
        app:layout_constraintStart_toStartOf="@+id/sr_editText_email"
        app:layout_constraintTop_toBottomOf="@+id/sr_editText_email" />

    <TextView
        android:id="@+id/sr_textView_error"
        android:layout_width="370dp"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="515dp" />

</androidx.constraintlayout.widget.ConstraintLayout>